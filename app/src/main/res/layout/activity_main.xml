<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.gameofthronesquiz.MainActivity">

    <ImageView
        style="@style/bckg_style"
        android:contentDescription="@string/image"
        android:src="@drawable/wallpaper" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/my_layout"
            style="@style/parent_ll_style">

            <TextView
                android:id="@+id/intro"
                style="@style/intro_text_style1"
                android:text="@string/welcome" />

            <TextView
                android:id="@+id/intro2"
                style="@style/intro_text_style"
                android:text="@string/got"
                android:textSize="@dimen/got" />

            <TextView
                android:id="@+id/intro3"
                style="@style/intro_text_style"
                android:text="@string/welcome_cont" />

            <TextView
                style="@style/intro3_text_style"
                android:text="@string/warning" />

            <TextView
                style="@style/q_style"
                android:text="@string/stark_sword" />

            <RadioGroup
                android:id="@+id/rg_sword"
                style="@style/rg_style">

                <RadioButton
                    android:id="@+id/rb_needle"
                    style="@style/rb_style"
                    android:text="@string/needle" />

                <RadioButton
                    android:id="@+id/rb_ice"
                    style="@style/rb_style"
                    android:text="@string/ice" />

                <RadioButton
                    android:id="@+id/rb_longclaw"
                    style="@style/rb_style"
                    android:text="@string/longclaw" />

                <RadioButton
                    android:id="@+id/rb_oathkeeper"
                    style="@style/rb_style"
                    android:text="@string/oathkeeper" />
            </RadioGroup>

            <TextView

                style="@style/q_style"
                android:text="@string/daenerys_nickname" />

            <LinearLayout style="@style/chbox_ll_style">

                <CheckBox
                    android:id="@+id/cb_stormborn"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/stormborn" />
            </LinearLayout>

            <LinearLayout style="@style/chbox_ll_style">

                <CheckBox
                    android:id="@+id/cb_unburnt"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/unburnt" />
            </LinearLayout>

            <LinearLayout style="@style/chbox_ll_style">

                <CheckBox
                    android:id="@+id/cb_queen"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/queen" />
            </LinearLayout>

            <LinearLayout
                style="@style/rg_style"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_silver"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/silver" />
            </LinearLayout>

            <TextView
                style="@style/q_style"
                android:text="@string/mormont_disease" />

            <RadioGroup
                android:id="@+id/jorah"
                style="@style/rg_style">

                <RadioButton
                    android:id="@+id/rb_mere_dis"
                    style="@style/rb_style"
                    android:text="@string/mere" />

                <RadioButton
                    android:id="@+id/rb_scale_dis"
                    style="@style/rb_style"
                    android:text="@string/grayscale" />

                <RadioButton
                    android:id="@+id/rb_sickness_dis"
                    style="@style/rb_style"
                    android:text="@string/sickness" />

                <RadioButton
                    android:id="@+id/rb_plague_dis"
                    style="@style/rb_style"
                    android:text="@string/plague" />
            </RadioGroup>


            <TextView
                style="@style/q_style"
                android:text="@string/arya_direwolf" />

            <!-- This LinearLayout is supposed to prevent the keyboard from appearing when the app starts-->
            <LinearLayout
                style="@style/inv_ll_style"
                tools:ignore="UselessLeaf" />

            <EditText
                android:id="@+id/direwolf_edtxt"
                style="@style/etxt_style"
                android:hint="@string/type" />

            <TextView
                style="@style/q_style"
                android:text="@string/kingsguard" />

            <EditText
                android:id="@+id/kings_guards_edtxt"
                style="@style/etxt2_style"
                android:hint="@string/type" />


            <TextView
                style="@style/q_style"
                android:text="@string/martell_seat" />

            <RadioGroup
                android:id="@+id/martell"
                style="@style/rg_style">

                <RadioButton
                    android:id="@+id/rb_highgarden"
                    style="@style/rb_style"
                    android:text="@string/highgarden" />

                <RadioButton
                    android:id="@+id/rb_dragonst"
                    style="@style/rb_style"
                    android:text="@string/dragonstone" />

                <RadioButton
                    android:id="@+id/rb_sun"
                    style="@style/rb_style"
                    android:text="@string/sunspear" />

                <RadioButton
                    android:id="@+id/rb_volantis"
                    style="@style/rb_style"
                    android:text="@string/volantis" />
            </RadioGroup>

            <TextView
                style="@style/q_style"
                android:text="@string/valar_morghulis" />

            <RadioGroup
                android:id="@+id/valar"
                style="@style/rg_style">

                <RadioButton
                    android:id="@+id/rb_must_serve"
                    style="@style/rb_style"
                    android:text="@string/serve" />

                <RadioButton
                    android:id="@+id/rb_today"
                    style="@style/rb_style"
                    android:text="@string/today" />

                <RadioButton
                    android:id="@+id/rb_die"
                    style="@style/rb_style"
                    android:text="@string/die" />

                <RadioButton
                    android:id="@+id/rb_win"
                    style="@style/rb_style"
                    android:text="@string/win" />
            </RadioGroup>

            <TextView
                style="@style/q_style"
                android:text="@string/varys_nickname" />

            <LinearLayout style="@style/chbox_ll_style">

                <CheckBox
                    android:id="@+id/cb_hound"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/hound" />
            </LinearLayout>

            <LinearLayout style="@style/chbox_ll_style">

                <CheckBox
                    android:id="@+id/cb_mountain"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/mountain" />
            </LinearLayout>

            <LinearLayout style="@style/chbox_ll_style">

                <CheckBox
                    android:id="@+id/cb_spider"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/spider" />
            </LinearLayout>

            <LinearLayout
                style="@style/rg_style"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_eunuch"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/eunuch" />
            </LinearLayout>

            <TextView
                style="@style/q_style"
                android:text="@string/mad_king" />

            <RadioGroup
                android:id="@+id/king"
                style="@style/rg_style">

                <RadioButton
                    android:id="@+id/rb_aegon"
                    style="@style/rb_style"
                    android:text="@string/aegon" />

                <RadioButton
                    android:id="@+id/rb_aeris"
                    style="@style/rb_style"
                    android:text="@string/aeris" />

                <RadioButton
                    android:id="@+id/rb_aemon"
                    style="@style/rb_style"
                    android:text="@string/aemon" />

                <RadioButton
                    android:id="@+id/rb_rhaegar"
                    style="@style/rb_style"
                    android:text="@string/rhaegar" />
            </RadioGroup>

            <TextView
                style="@style/q_style"
                android:text="@string/weapon" />

            <LinearLayout style="@style/chbox_ll_style">

                <CheckBox
                    android:id="@+id/cb_dragonglass"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/dragonglass" />
            </LinearLayout>

            <LinearLayout style="@style/chbox_ll_style">

                <CheckBox
                    android:id="@+id/cb_obsidian"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/obsidian" />
            </LinearLayout>

            <LinearLayout style="@style/chbox_ll_style">

                <CheckBox
                    android:id="@+id/cb_dragonstone"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/dragonstone" />
            </LinearLayout>

            <LinearLayout
                style="@style/rg_style"
                android:orientation="horizontal"
                tools:ignore="TooManyViews">

                <CheckBox
                    android:id="@+id/cb_valyrian"
                    style="@style/chbox_style" />

                <TextView
                    style="@style/chbox_style"
                    android:text="@string/valyrian" />
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                style="@style/button_style"
                android:onClick="showScore"
                android:text="@string/submit" />

            <Button
                android:id="@+id/retake"
                style="@style/button_style"
                android:onClick="retakeQuiz"
                android:text="@string/retake"
                android:textSize="@dimen/question_size" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
